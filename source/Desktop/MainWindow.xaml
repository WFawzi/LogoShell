<Window x:Class="Logo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1000" Width="1000" ResizeMode="CanResizeWithGrip">
        <DockPanel LastChildFill="true" Grid.Row="0">
            <TextBox DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="300" Margin="10,0,10,10" TextWrapping="NoWrap" Text="TextBlockasdf" AcceptsReturn="True" AcceptsTab="True" Background="white" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
            <Button VerticalAlignment="Bottom" Margin="5,5,5,10" Padding="15,5,15,5" IsDefault="True" HorizontalAlignment="Left" Background="#FF56DE41" FontFamily="Segoe UI Semibold" FontSize="16">Run!</Button>
            <Canvas  Name="LogoCanvas" DockPanel.Dock="Top" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,10,10,10" ClipToBounds="True"/>
        </DockPanel>
</Window>
